{
  "extends": "airbnb-base",
  "rules": {
    "no-restricted-syntax": [
      "error",
      "LabeledStatement",
      "WithStatement"
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "babelOptions": {
      "configFile": "./.babelrc"
    },
    "ecmaVersion": 2018
  },
  "plugins": [
    "@babel"
  ]
}
